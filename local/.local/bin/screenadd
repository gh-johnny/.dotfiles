#!/bin/sh

# Check if there is an argument
if [ -z "$1" ] && { [ "$1" == "--above" ] || [ "$1" == "--below" ] || [ "$1" == "--left-of" ] || [ "$1" == "--right-of" ] || [ "$1" == "--same-as" ]; }
then
    xrandr --output HDMI1 --auto $1 eDP1
    exit 0
else 
    echo "This command requires 1 argument"
    echo "Available options: --above, --below, --left-of, --right-of, --same-as"
    exit 1
fi
